<!DOCTYPE html>
<html>
  <head>
    <title>SOPHIST BOX</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name=”viewport” content=”width=device-width, initial-scale=1”>
   
  </head>

  <body>
   <header class="header">
      <div class="header__bar row">
        <h1 class="grid-6"><a href="/">SOPHIST BOX</a></h1>

       
      
  


  

    


  
      
        
        <% if user_signed_in? %>
          <div class="user_nav grid-6">
            <span><%= current_user.nickname %>
            <ul class="user__info">
              <li>
                <%= link_to "マイページ", "/users/#{current_user.id}" %>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </span>
            <%= link_to "投稿する", new_tweet_path, class: "post" %>
          </div>
        <% else %>
          <div class="grid-6">
            <%= link_to "ログイン", new_user_session_path, class: "post" %>
            <%= link_to "新規登録", new_user_registration_path, class: "post" %>
          </div>
        <% end %>
      </div>
    </header>
    

    <div class= "sidebar">
      <%= form_with(url: search_tweets_path, local: true, method: :get, class: "search-form") do |form| %>
        <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
        <%= form.submit "検索", class: "search-btn" %>
      <% end %>

      <h1 class= "ranking">＜今週のユーザーランキング＞</h1>
      <h2 class= "userrank1">1.homare</h2>
        
      
    </div>

    
    

    <%= yield %>



    <footer>
      <p>
        Copyright © SOPHIST BOX 2021.
      </p>
    </footer>
  </body>
</html>
